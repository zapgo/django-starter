## Python
$PackageName = 'miniconda'
$InstallerType = 'EXE'
$Url = 'https://repo.continuum.io/miniconda/Miniconda-3.10.1-Windows-x86.exe'
$Url64 = 'https://repo.continuum.io/miniconda/Miniconda-3.10.1-Windows-x86_64.exe'
$Args = "/InstallationType=AllUsers /RegisterPython=1 /AddToPath=1 /S"
$ValidExitCodes = @(0)
 
Install-ChocolateyPackage "$PackageName" "$InstallerType" "$Args" "$Url" "$Url64"  -validExitCodes $ValidExitCodes

pip install fabric3


